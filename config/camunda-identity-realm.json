{
  "realm": "camunda-platform",
  "enabled": true,
  "sslRequired": "none",
  "roles": {
    "realm": [
      {"name": "camunda-admin", "description": "Administrator with full access"},
      {"name": "task-supervisor", "description": "Supervisor who can view all tasks"},
      {"name": "task-executor", "description": "Worker who can only see assigned tasks"}
    ],
    "client": {
      "tasklist": [
        {"name": "Tasklist", "description": "Access to Tasklist application"}
      ],
      "operate": [
        {"name": "Operate", "description": "Access to Operate application"}
      ]
    }
  },
  "groups": [
    {"name": "camunda-admin", "path": "/camunda-admin"},
    {"name": "task-supervisors", "path": "/task-supervisors"},
    {"name": "task-executors", "path": "/task-executors"}
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [{"type": "password", "value": "admin", "temporary": false}],
      "realmRoles": ["camunda-admin"],
      "clientRoles": {
        "tasklist": ["Tasklist"],
        "operate": ["Operate"]
      },
      "groups": ["camunda-admin"]
    },
    {
      "username": "supervisor",
      "enabled": true,
      "email": "supervisor@example.com",
      "firstName": "Task",
      "lastName": "Supervisor",
      "credentials": [{"type": "password", "value": "camunda", "temporary": false}],
      "realmRoles": ["task-supervisor"],
      "clientRoles": {
        "tasklist": ["Tasklist"],
        "operate": ["Operate"]
      },
      "groups": ["task-supervisors"]
    },
    {
      "username": "executor",
      "enabled": true,
      "email": "executor@example.com",
      "firstName": "Task",
      "lastName": "Executor",
      "credentials": [{"type": "password", "value": "camunda", "temporary": false}],
      "realmRoles": ["task-executor"],
      "clientRoles": {
        "tasklist": ["Tasklist"]
      },
      "groups": ["task-executors"]
    }
  ],
  "clients": [
    {
      "clientId": "operate",
      "name": "Operate",
      "enabled": true,
      "publicClient": false,
      "secret": "operate-secret",
      "protocol": "openid-connect",
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "defaultClientScopes": ["openid", "profile", "email", "roles"]
    },
    {
      "clientId": "tasklist",
      "name": "Tasklist",
      "enabled": true,
      "publicClient": false,
      "secret": "tasklist-secret",
      "protocol": "openid-connect",
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "defaultClientScopes": ["openid", "profile", "email", "roles"]
    },
    {
      "clientId": "zeebe",
      "name": "Zeebe",
      "enabled": true,
      "publicClient": false,
      "secret": "zeebe-secret",
      "protocol": "openid-connect",
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true
    }
  ],
  "clientScopes": [
    {
      "name": "roles",
      "protocol": "openid-connect",
      "attributes": {"include.in.token.scope": "true"},
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "roles",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "client roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "config": {
            "claim.name": "resource_access.${client_id}.roles",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ]
}
